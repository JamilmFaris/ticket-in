<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/trip_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:text="dorji"
        android:textSize="40dp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/from_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trip_company_name"

        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="from sham to lattakia"
        android:textSize="20dp"

        />

    <TextView
        android:id="@+id/start_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from_to"

        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="start at 5:00 o'clock"
        android:textSize="15dp"
        android:textStyle="italic"

        />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_at"

        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="30$"
        android:textSize="20dp"
        android:textStyle="italic"

        />


    <TextView
        android:id="@+id/booked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:visibility="gone"
        android:text="@string/booked"
        />
</androidx.constraintlayout.widget.ConstraintLayout>