<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/tripphoto"
        >
        <TextView
            android:id="@+id/trip_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="company : dorji"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"

            />

        <TextView
            android:id="@+id/from_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trip_company_name"

            android:layout_marginTop="10dp"
            android:text="from sham to lattakia"
            android:textSize="20sp"
            android:textColor="@color/md_green_900"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/start_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/from_to"

            android:layout_marginTop="10dp"
            android:text="start at 5:00 o'clock"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="@color/md_green_900"

            />


        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:text="30$"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/md_green_900"
            app:layout_constraintEnd_toStartOf="@+id/was_booked"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/start_at" />

        <TextView
            android:id="@+id/was_booked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:visibility="gone"
            android:text="@string/booked"
            android:textSize="20sp"
            android:textColor="@color/md_grey_50"
            android:textStyle="bold"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>